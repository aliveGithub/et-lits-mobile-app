<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LITS" parent="Theme.AppCompat.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

    </style>

    <style name="Theme.LITSMobileApp" parent="Base.Theme.LITS">
        <item name="android:fontFamily">@font/inter</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>

    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>


    <style name="MyActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomBottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.BottomNav.Rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.BottomNav.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>