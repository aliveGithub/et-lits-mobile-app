<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.activities.AnimalRegActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/animal_reg_animals_identified_and_registered"
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:padding="@dimen/small_padding"
            android:background="@drawable/bg_section_header_green"
            android:layout_marginBottom="@dimen/small_margin"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_animal_filled"
                android:layout_margin="@dimen/big_padding"
                android:layout_gravity="center"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_herd_specie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/animal_reg_herd_specie" />
                <Spinner
                    android:id="@+id/s_species"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_herd_specie"
                    android:hint=""
                    android:minHeight="@dimen/min_touch_target_size"
                    android:enabled="false"
                    android:background="@drawable/bg_dropdown_default"
                    android:layout_marginTop="@dimen/small_margin"
                    />

            </RelativeLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_animals"
            android:layout_margin="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            tools:listitem="@layout/recyclerview_animal_item"
          />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/animal_reg_add_animal"
            android:id="@+id/btn_add_animal"
            android:layout_gravity="center"
            android:layout_margin="@dimen/small_margin"
            android:background="@drawable/bg_primary_green"
            android:textColor="@color/white"
            android:padding="@dimen/small_padding"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            />
    </LinearLayout>
</ScrollView>