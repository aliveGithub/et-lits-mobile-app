<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.AnimalsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/big_padding">
            <LinearLayout
                android:id="@+id/animals_search_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:padding="@dimen/big_padding"
                android:alignmentMode="alignBounds"
                android:columnOrderPreserved="false">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_register"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="@dimen/card_item_elevation"
                    app:cardCornerRadius="@dimen/card_item_corner_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/big_padding"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="@dimen/card_item_icon_size"
                            android:layout_height="@dimen/card_item_icon_size"
                            android:scaleType="centerCrop"
                            android:padding="@dimen/small_padding"
                            android:src="@drawable/ic_register" />

                        <TextView
                            android:id="@+id/tv_register"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/animals_register_tag"
                            android:textSize="@dimen/font_size_bigger"
                            android:paddingTop="@dimen/small_padding"
                            android:gravity="center"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="@dimen/card_item_elevation"
                    app:cardCornerRadius="@dimen/card_item_corner_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/big_padding"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/card_health"
                            android:layout_width="@dimen/card_item_icon_size"
                            android:layout_height="@dimen/card_item_icon_size"
                            android:scaleType="centerCrop"
                            android:padding="@dimen/small_padding"
                            android:src="@drawable/ic_heart" />

                        <TextView
                            android:id="@+id/tv_health"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/animals_health"
                            android:textSize="@dimen/font_size_bigger"
                            android:paddingTop="@dimen/small_padding"
                            android:gravity="center"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="@dimen/card_item_elevation"
                    app:cardCornerRadius="@dimen/card_item_corner_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/big_padding"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/card_remove"
                            android:layout_width="@dimen/card_item_icon_size"
                            android:layout_height="@dimen/card_item_icon_size"
                            android:scaleType="centerCrop"
                            android:padding="@dimen/small_padding"
                            android:src="@drawable/ic_close_square" />

                        <TextView
                            android:id="@+id/tv_remove"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/animals_remove"
                            android:textSize="@dimen/font_size_bigger"
                            android:paddingTop="@dimen/small_padding"
                            android:gravity="center"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="@dimen/card_item_elevation"
                    app:cardCornerRadius="@dimen/card_item_corner_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/big_padding"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/card_trace"
                            android:layout_width="@dimen/card_item_icon_size"
                            android:layout_height="@dimen/card_item_icon_size"
                            android:scaleType="centerCrop"
                            android:padding="@dimen/small_padding"
                            android:src="@drawable/ic_register" />

                        <TextView
                            android:id="@+id/tv_trace"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/animals_trace"
                            android:textSize="@dimen/font_size_bigger"
                            android:paddingTop="@dimen/small_padding"
                            android:gravity="center"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </GridLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>