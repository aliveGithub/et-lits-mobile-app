<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activities.AnimalEntryActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_margin="@dimen/big_margin"
        android:layout_weight="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home"
            android:layout_margin="@dimen/big_padding"
            android:layout_gravity="center"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_animal_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/animal_reg_animal_id"
                style="@style/FieldLabelStyle"/>

            <EditText
                android:id="@+id/et_animal_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_animal_id"
                android:hint="@string/reg_enter_animal_id"
                android:minHeight="@dimen/min_touch_target_size"
                android:background="@drawable/bg_input_default"
                android:paddingLeft="@dimen/very_small_padding"
                style="@style/EditTextStyle"
                />

            <TextView
                android:id="@+id/tv_animal_id_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_animal_id"
                android:text=""
                android:drawableStart="@drawable/ic_error"
                android:drawablePadding="@dimen/very_small_padding"
                android:visibility="gone"
                android:paddingLeft="@dimen/very_small_padding"
                android:paddingBottom="@dimen/small_padding"
                style="@style/FieldErrorStyle" />

        </RelativeLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_animal_filled"
                android:layout_margin="@dimen/big_padding"
                android:layout_gravity="center"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_breed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/animal_reg_breed"
                    style="@style/FieldLabelStyle"
                    />
                <Spinner
                    android:id="@+id/s_breed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_breed"
                    android:hint="@string/animal_reg_select"
                    android:minHeight="@dimen/min_touch_target_size"
                    android:background="@drawable/bg_dropdown_default"
                    android:paddingRight="@dimen/big_padding"
                    style="@style/SpinnerStyle"
                    />
                <TextView
                    android:id="@+id/tv_breed_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/s_breed"
                    android:text=""
                    android:drawableStart="@drawable/ic_error"
                    android:drawablePadding="@dimen/very_small_padding"
                    android:visibility="gone"
                    android:paddingLeft="@dimen/very_small_padding"
                    android:paddingBottom="@dimen/small_padding"
                    style="@style/FieldErrorStyle"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sex"
                android:layout_margin="@dimen/big_padding"
                android:layout_gravity="center"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/animal_reg_sex"
                    style="@style/FieldLabelStyle"
                    />

                <Spinner
                    android:id="@+id/s_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_sex"
                    android:hint="@string/animal_reg_select"
                    android:minHeight="@dimen/min_touch_target_size"
                    android:background="@drawable/bg_dropdown_default"
                    android:paddingRight="@dimen/big_padding"
                    style="@style/SpinnerStyle"
                    />
                <TextView
                    android:id="@+id/tv_sex_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/s_sex"
                    android:text=""
                    android:drawableStart="@drawable/ic_error"
                    android:drawablePadding="@dimen/very_small_padding"
                    android:visibility="gone"
                    android:paddingLeft="@dimen/very_small_padding"
                    android:paddingBottom="@dimen/small_padding"
                    style="@style/FieldErrorStyle" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_hourglass"
                android:layout_margin="@dimen/big_padding"
                android:layout_gravity="center"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/animal_reg_age"
                    style="@style/FieldLabelStyle"
                    />

                <EditText
                    android:id="@+id/et_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_age"
                    android:hint="@string/animal_reg_age_hint"
                    android:minHeight="@dimen/min_touch_target_size"
                    android:inputType="number"
                    android:paddingLeft="@dimen/very_small_padding"
                    android:background="@drawable/bg_input_default"
                    style="@style/EditTextStyle"
                    />
                <TextView
                    android:id="@+id/tv_age_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_age"
                    android:text=""
                    android:drawableStart="@drawable/ic_error"
                    android:drawablePadding="@dimen/very_small_padding"
                    android:visibility="gone"
                    android:paddingLeft="@dimen/very_small_padding"
                    android:paddingBottom="@dimen/small_padding"
                    style="@style/FieldErrorStyle" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_square"
                android:layout_margin="@dimen/big_padding"
                android:layout_gravity="center"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_dead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/animal_reg_dead"
                    style="@style/FieldLabelStyle"
                    />
                <Switch
                    android:id="@+id/sw_dead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_dead"
                    android:minHeight="@dimen/min_touch_target_size"
                    android:minWidth="@dimen/min_touch_target_size"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person"
                android:layout_margin="@dimen/big_padding"
                android:layout_gravity="center"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_seller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/animal_reg_seller"
                    style="@style/FieldLabelStyle"/>

                <EditText
                    android:id="@+id/et_seller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_seller"
                    android:hint="@string/animal_reg_seller_hint"
                    android:minHeight="@dimen/min_touch_target_size"
                    android:background="@drawable/bg_input_default"
                    android:paddingLeft="@dimen/very_small_padding"
                    style="@style/EditTextStyle"/>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_sheet">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_white_round_corners"
            android:layout_margin="@dimen/big_padding">
            <LinearLayout
                android:id="@+id/bottom_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/animal_reg_done"
                    android:id="@+id/btn_done"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/small_margin"
                    android:background="@drawable/bg_white_round_corners"
                    android:textColor="@color/colorPrimary"
                    android:padding="@dimen/small_padding"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:drawableLeft="@drawable/ic_tick_square"
                    android:drawablePadding="@dimen/small_padding" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/animal_reg_add_next_animal"
                    android:id="@+id/btn_add_next_animal"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/small_margin"
                    android:background="@drawable/bg_white_round_corners"
                    android:textColor="@color/colorPrimary"
                    android:padding="@dimen/small_padding"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:drawableLeft="@drawable/ic_plus"
                    android:drawablePadding="@dimen/small_padding" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>