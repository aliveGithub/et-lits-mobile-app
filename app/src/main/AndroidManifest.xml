<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".LitsApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LITSMobileApp"
        tools:targetApi="31">
        <activity
            android:name=".ui.activities.AnimalListActivity"
            android:exported="false"
            android:launchMode="singleTop"/>
        <activity
            android:name=".ui.activities.AboutActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.TermsOfUseActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.AnimalRegListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.AnimalEntryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.AnimalRegActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.EstablishmentSummaryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.SyncActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.InfoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.LoginActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="false" />
    </application>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>